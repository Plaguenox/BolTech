---
const { logoSrc = '/assets/logo/Logo1.png', welcomeText = 'Bienvenido a BolTech' } = Astro.props;
---

<style lang="css">
:root {
    --splash-bg: #8C4BFF;
}
.splash {
    position: fixed;
    inset: 0;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    background-color: var(--splash-bg);
    color: #fff;
    z-index: 9999;
}
.splash img {
    max-width: 200px;
    margin-bottom: 1.25rem;
}
.splash h1 {
    margin: 0 0 1.875rem;
    font-size: 2.5rem;
}
.spinner {
    width: 3.125rem;
    height: 3.125rem;
    border: 0.375rem solid rgba(255,255,255,0.3);
    border-top-color: #fff;
    border-radius: 50%;
    animation: spin 1s linear infinite;
}
@keyframes spin {
    to { transform: rotate(360deg); }
}
</style>

<div class="splash" id="splash">
<img src={logoSrc} alt="Logo BolTech" />
<h1>{welcomeText}</h1>
<div class="spinner"></div>
</div>
