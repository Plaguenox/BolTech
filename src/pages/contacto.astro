---
import BaseLayout from '../layouts/BaseLayout.astro';
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';
import '../styles/boltech.css';
---
<BaseLayout>
  <Navbar slot="navbar" />
  <section class="mx-auto py-16 px-4 lg:max-w-4xl animate-glass">
    <h1 class="font-extrabold text-tech text-center mb-8" style="font-size:2.2rem;">Contacto</h1>
    <form class="bg-glass shadow-glass rounded-2xl p-8 flex flex-col gap-4">
      <input type="text" placeholder="Nombre" class="rounded bg-claro border-2 border-tech p-4" required />
      <input type="email" placeholder="Correo electrÃ³nico" class="rounded bg-claro border-2 border-tech p-4" required />
      <textarea placeholder="Mensaje" class="rounded bg-claro border-2 border-tech p-4" required></textarea>
      <button type="submit" class="rounded bg-vision text-white font-bold shadow-glass" style="padding:0.7rem 2rem;">Enviar</button>
    </form>
    <div class="flex gap-4 mt-8 justify-center">
      <a href="https://www.tiktok.com/@boltech71" class="text-tech flex items-center gap-2" style="text-decoration:underline;" target="_blank" rel="noopener noreferrer">
        <img src="/assets/icons/tiktok.svg" alt="TikTok" style="width:1.3em;height:1.3em;vertical-align:middle;" />
        TikTok
      </a>
      <a href="https://www.instagram.com/boltech2025" class="text-tech flex items-center gap-2" style="text-decoration:underline;" target="_blank" rel="noopener noreferrer">
        <img src="/assets/icons/instagram.svg" alt="Instagram" style="width:1.3em;height:1.3em;vertical-align:middle;" />
        Instagram
      </a>
      <a href="mailto:bol.tech.contacts@gmail.com" class="text-tech flex items-center gap-2" style="text-decoration:underline;">
        <img src="/assets/icons/gmail.svg" alt="Gmail" style="width:1.3em;height:1.3em;vertical-align:middle;" />
        Gmail
      </a>
      <a href="https://linkedin.com/in/bol-tech-a4b882377" class="text-tech flex items-center gap-2" style="text-decoration:underline;" target="_blank" rel="noopener noreferrer">
        <img src="/assets/icons/linkedin.svg" alt="LinkedIn" style="width:1.3em;height:1.3em;vertical-align:middle;" />
        LinkedIn
      </a>
      <a href="https://wa.me/59169302176?text=Hola%2C%20estoy%20interesado%2Fa%20en%20el%20servicio%20de%20BolTech" class="text-tech flex items-center gap-2" style="text-decoration:underline;" target="_blank" rel="noopener noreferrer">
        <img src="/assets/icons/wats.svg" alt="WhatsApp" style="width:1.3em;height:1.3em;vertical-align:middle;" />
        WhatsApp
      </a>
      <a href="" class="text-tech flex items-center gap-2" style="text-decoration:underline;" target="_blank" rel="noopener noreferrer">
        <img src="/assets/icons/facebok.svg" alt="Facebook" style="width:1.3em;height:1.3em;vertical-align:middle;" />
        Facebook
      </a>
    </div>
  </section>
  <Footer slot="footer" />
</BaseLayout>
